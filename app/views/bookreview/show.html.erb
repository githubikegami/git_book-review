

  <% @bookreviews.each do |bookreviews| %>
    <%= bookreviews.image %>
    <%= bookreviews.name %>
    <%= bookreviews.description %>
    <%= bookreviews.price %>
    <%= bookreviews.publisher %>
  <% end %>
  
    <!-- ここからフォーム -->
    <% if current_user %>
      <%= form_tag("/bookreview/#{@bookreviews.id}/comments", method: :post) do %>
        <textarea name="text" placeholder="コメントする" rows="2" cols="30"></textarea>
        <input type="submit" value="SENT">
      <% end %>
    <% end %>

      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %></strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>