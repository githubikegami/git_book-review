<!DOCTYPE html>
<html>
  <head>
    <title>BookReview</title>
    <link rel="stylesheet" href="normalize.css">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  

  <body>
    <header>
      <div class="user_nav">
          <div class="root"><a href="/">BookReview</a>
            <a href="/bookreview">書籍一覧</a>
          </div>
            <% if user_signed_in? %>
              <ul>
                <li><a href="/users/">ユーザー一覧</a></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              </ul>
            <% else %>
              <ul>
                <li><%= link_to "ログイン", new_user_session_path, class: 'post' %></li>
                <li><%= link_to "新規登録", new_user_registration_path, class: 'post' %></li>
              </ul>
            <% end %>
            <%= form_tag('/bookreview/search', method: :get,class: "search_form") do %>
              <input class="input_search" name="keyword" placeholder="書籍のタイトルを入力" type="text"><button class="button-search" title="検索" type="submit" value="検索">検索</button></input>
            <% end %>
               <!--<form accept-charset="utf-8" action="/" class="js-search-submit" method="get">-->
               <!--</form>-->
      </div>
    </header>
    
    <%= yield %>
    
      <footer>
        <p>Bookレビュー©2020.All Rights Reserved.</p>
      </footer>
  </body>
</html>
