
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login">
    <h2>Log in</h2>
  </div>

  <div class="field1">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => 'メールアドレスを入力'%>
  </div>

  <div class="field2">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",:placeholder => 'パスワードを入力' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field3">
      <%= f.check_box :remember_me %><br />
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  
  <div class="aid">
<%= render "devise/shared/links" %>
  </div>
<% end %>


