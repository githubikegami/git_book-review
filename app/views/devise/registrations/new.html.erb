
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h2>Sign up</h2>

  <div class="field1">
    <%= f.label :email %><br />
    <%= f.email_field :email,autofocus: true, :placeholder => 'メールアドレスを入力' %>
  </div>

  <div class="field2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",:placeholder => 'パスワードを入力'%>
  </div>

  <div class="field3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => 'パスワードを入力（確認）' %>
  </div>
  
  <div class="field4"><%= f.label :nickname %><br />
    <%= f.text_field :nickname, placeholder: 'ニックネームを入力(必須)' %> %></div>
    <div class="field">
    <%= f.file_field :image %>
  </div>

  <div class="actions">
   <%= f.submit "Sign up" %>
  </div>

  <div class="aid">
<%= render "devise/shared/links" %>
  </div>
<% end %>
